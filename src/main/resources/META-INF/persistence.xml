<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">

    <!--Three percistence units to simulate separate systems-->
    <!--Ladok persistence unit-->
    <persistence-unit name="ladokPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.pulse.ladok.entity.Result</class>
        
        <properties>
        
        <!--Schema and Hibernate for Ladok-->
        <property name="hibernate.default_schema" value="ladok"/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>

        <!--JDBC connection properties for Ladok-->
        <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pulse"/>
        <property name="jakarta.persistence.jdbc.user" value="postgres"/>
        <property name="jakarta.persistence.jdbc.password" value="pulse"/>
        <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

        </properties>
        
    </persistence-unit>

    <!-- Epok persistence unit -->
    <persistence-unit name="epokPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.pulse.epok.entity.Course</class>
        <class>com.pulse.epok.entity.Module</class>

        <properties>

        <!-- Schema and Hibernate for Epok-->
        <property name="hibernate.default_schema" value="epok"/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>

        <!-- JDBC connection properties for Epok-->
        <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pulse"/>
        <property name="jakarta.persistence.jdbc.user" value="postgres"/>
        <property name="jakarta.persistence.jdbc.password" value="pulse"/>
        <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
    </properties>
    </persistence-unit>

    <!-- StudentITS persistence unit -->
    <persistence-unit name="studentitsPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.pulse.studentits.entity.StudentAccount</class>

        <properties>

        <!-- Schema and Hibernate for StudentITS-->
        <property name="hibernate.default_schema" value="studentits"/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>
        
        <!-- JDBC connection properties for StudentITS-->
        <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pulse"/>
        <property name="jakarta.persistence.jdbc.user" value="postgres"/>
        <property name="jakarta.persistence.jdbc.password" value="pulse"/>
        <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
    </properties>
    </persistence-unit>

</persistence>